! ----------------------------------------------------------------------------
! ! file:     ~/.Xdefaults
! ! vim:enc=utf8:nu:ai:si:et:ts=4:sw=4:ft=xdefaults:
! ----------------------------------------------------------------------------

! terminal colors ------------------------------------------------------------
*background: #1c1d1f
*foreground: #b0b0b0
! Special Orange
URxvt*color0:#1c1d1f
URxvt*color1:#FF0000
URxvt*color2:#00FF00
URxvt*color3:#FFFF00
URxvt*color4:#085dad
URxvt*color5:#FF00FF
URxvt*color6:#00FFFF
URxvt*color7:#B0B0B0
URxvt*color8:#e04614
URxvt*color9:#AA0000
URxvt*color10:#00AA00
URxvt*color11:#A8350F
URxvt*color12:#6599FF
URxvt*color13:#AA00AA
URxvt*color14:#00AAAA
URxvt*color15:#999999
! other urxvt options
URxvt.perl-ext: default,url-select
!,tabbed
URxvt*internalBorder:0
URxvt.urgentOnBell: true
!URxvt*tabbed.tabbar-bg:0
!URxvt*tabbed.tabbar-fg:8
!URxvt*tabbed.tab-bg:0
!URxvt*tabbed.tab-fg:8
URxvt*keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/firefox -new-tab
URxvt.url-select.underline: false
URxvt*matcher.button: 1
URxvt*termName:screen-256color
!URxvt*termName:screen
!URxvt.font:xft:monospace:size=7
URxvt.font:xft:DejaVu Sans Mono for Powerline:size=8
!URxvt.font:-*-courier-medium-r-normal-*-12-*-*-*-*-*-iso8859-1
!URxvt.font:-*-zekton-regular-*-*-*-10-*-*-*-*-*-iso8859-1
URxvt*letterSpace: 0
URxvt.saveLines:10000
URxvt.iconFile:/home/eye/.icons/ACYLBlue/scalable/apps/terminal.svg
URxvt.geometry:70x35
URxvt.scrollBar: off
URxvt*cursorUnderline: 1
URxvt*underlineColor: #e04614

! Xcursor -------------------------------------------------------------------

Xcursor.theme: Vanilla-DMZ-AA
Xcursor.size: 16


! xscreensaver --------------------------------------------------------------
!font settings
xscreensaver.Dialog.headingFont: xft:zekton:size=7
xscreensaver.Dialog.bodyFont: xft:zekton:size=7
xscreensaver.Dialog.labelFont: xft:zekton:size=7
xscreensaver.Dialog.unameFont: xft:zekton:size=7
xscreensaver.Dialog.buttonFont: xft:zekton:size=7
xscreensaver.Dialog.dateFont: xft:zekton:size=7h
xscreensaver.passwd.passwdFont: xft:zekton:size=7
!general dialog box
xscreensaver.Dialog.foreground: #b0b0b0
xscreensaver.Dialog.background: #1c1d1f
xscreensaver.Dialog.topShadowColor: #1c1d1f
xscreensaver.Dialog.bottomShadowColor: #1c1d1f
xscreensaver.Dialog.Button.foreground:  #b0b0b0
xscreensaver.Dialog.Button.background:  #1c1d1f
!username/password input box and date text colour
xscreensaver.Dialog.text.foreground:    #b0b0b0
xscreensaver.Dialog.text.background: #1c1d1f
xscreensaver.Dialog.borderWidth:        0
xscreensaver.Dialog.shadowThickness:    0
xscreensaver.passwd.thermometer.foreground: #1c1d1f
xscreensaver.passwd.thermometer.background: #1c1d1f
xscreensaver.passwd.thermometer.width: 0
!datestamp format--see the strftime(3) manual page for details
xscreensaver.dateFormat:    %H:%M - %a %d. %b %Y

!Xft.dpi: 96
!Xft.antialias: true
!Xft.rgba: rgb
!Xft.hinting: true
!Xft.hintstyle: hintfull
